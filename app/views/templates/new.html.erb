
<div class="row">
	<div class="col-md-offset-4 col-xs-offset-2 col-md-4 col-xs-8">
		<%= form_for(@template, multipart: true) do |f|%>
			<div class="field form-group">
			    <%= f.label :name, "Name", class: "sr-only" %>
			    <%= f.text_field :name, autofocus: true, class: "form-control input-lg", placeholder: "Name" %>
			</div>

			<div class="field form-group">
			    <%= f.label :dimensions, "Dimensions", class: "sr-only" %>
			    <%= f.text_field :dimensions, class: "form-control input-lg", placeholder: "Diemnsions (e.g. 2x3)" %>
			</div>

			<div class="field form-group">
			    <%= f.label :link, "Link", class: "sr-only" %>
			    <%= f.text_field :link, class: "form-control input-lg", placeholder: "Url to assets for this template" %>
			</div>

			<div class="field form-group">
			    <%= f.label :category, "Category", class: "sr-only" %>
			    <%= f.text_field :category, class: "form-control input-lg", placeholder: "Category of template (e.g. Welcome Night)" %>
			</div>

			<div class="field form-group">
			    <%= f.label :name, "Name", class: "sr-only" %>
			    <%= f.file_field :image %>
			</div>

			<%= f.submit("Upload", id: "upload-btn", class: "btn btn-primary btn-lg btn-block") %>
		<% end %>
	</div>
</div>