<!DOCTYPE html>
<html>
<head>
  <title>PubsPortal</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag params[:controller] %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'freewall' %>
  <%= javascript_include_tag 'jstz.min' %>
  <%= javascript_include_tag 'rails-timezone.min' %>
  <%= javascript_include_tag params[:controller] %>
  <%= csrf_meta_tags %>
</head>
<body>

	<div class="container-fluid top-bar">

		<% if signed_in? %>
			<%= link_to "Home", root_path, id: "home" %>
			<% if can? :index, User %>
				<%= link_to "Users List", users_path, id: "users-list" %>
			<% end %>
			<%= link_to "View Profile", user_path(current_user), id: "view-profile" %>
			<%= link_to "Sign Out", sign_out_path, id: "sign-out", :method => :delete %>
			<div class="col-md-4 col-xs-4 right">
				<% if can? :create, Template %>
					<%= link_to "Upload Template", new_template_path, class: "btn btn-primary" %>
					<%= link_to "Administer Templates", templates_path, class: "btn btn-primary" %>
				<% end %>
			</div>
		<% end %> 

		<% if flash[:error] %>
			<div class="alert alert-danger alert-dismissible" role="alert">
				<button type="button" class="close" data-dismiss="alert" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
				<%= flash[:error] %>
			</div>
		<% end %>
		<% if flash[:success] %>
			<div class="alert alert-success alert-dismissible" role="alert">
				<button type="button" class="close" data-dismiss="alert" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
				<%= flash[:success] %>
			</div>
		<% end %>

		<%= yield :form_errors %>

		<%= yield %>

	</div>

</body>
</html>
