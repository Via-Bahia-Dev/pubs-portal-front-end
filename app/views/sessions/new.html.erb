<%= form_tag("/sign_in", method: "post") do %>
	<div class="field form-group">
	    <%= label_tag :email, "Email", class: "sr-only" %>
	    <%= email_field :user, :email, autofocus: true, class: "form-control input-lg", placeholder: "Email" %>
	</div>
	<div class="field form-group">
	    <%= label_tag :password, "Password", class: "sr-only" %>
	    <%= password_field_tag "user[password]", nil, autocomplete: "off", class: "form-control input-lg", placeholder: "Password" %>
	</div>

	<%= submit_tag("Sign In", class: "btn btn-primary btn-lg btn-block") %>
<% end %>