<div class="new-template-popover">
  <% templates.each do |template| %>
    <%= content_tag(:div, class: 'template-option', data: { id: template['id'] }) do %>
      <%= image_tag(template['image_large_thumb'], class: 'img-thumbnail') %>
    <% end %>
  <% end %>
  <%= content_tag(:div, class: 'template-option no-template', data: { id: 'nil' }) do %>
    <div class="img-thumbnail">
      <span class="glyphicon glyphicon-remove-circle"></span>
      <div class="text">No template</div>
    </div>
  <% end %>
</div>
