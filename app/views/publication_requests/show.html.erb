<div class="page-header">
	<h1><%= @publication_request["event"] %></h1>
</div>

<div class="row">
	<div class="col-md-4 col-xs-4" id="chosen-template">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">Template for this Request</h3>
			</div>
			<div class="panel-body">
				<%= image_tag(@publication_request["template"]["image_large"], class: "img-thumbnail") %>
			</div>
			<div class="panel-footer">
				<p><%= @publication_request["template"]["name"] %>, <%= @publication_request["template"]["dimensions"] %></p>
				<% if @publication_request["template"]["url"] %>
					<pre><%= @publication_request["template"]["url"] %> </pre>
				<% end %>
			</div>
		</div>
	</div>

	<div class="col-md-8 col-xs-8">
		
		<div class="row">

			<div class="col-md-6 col-xs-12">
				<div class="panel panel-default">
					<div class="panel-heading">
						<h3 class="panel-title">Name of the event</h3>
					</div>
				    <div class="panel-body"> <%= @publication_request["event"] %> </div>
				</div>
			</div>

			<div class="col-md-6 col-xs-12">
				<div class="panel panel-default">
					<div class="panel-heading">
						<h3 class="panel-title">Date of the event this is for</h3>
					</div>
					<div class="panel-body"><%= date_from(@publication_request["event_date"]) %> </div>
				</div>
			</div>

		</div>

		<div class="row">
			<div class="col-md-8 col-xs-12">
				<div class="panel panel-default">
					<div class="panel-heading">
			    		<h3 class="panel-title">Description</h3>
			    	</div>
			    	<div class="panel-body"><%= @publication_request["description"] %></div>
			    </div>
			</div>
		</div>

		<div class="row">
			<div class="col-md-6 col-xs-12">
				<div class="panel panel-default">
					<div class="panel-heading">
						<h3 class="panel-title">Dimensions</h3>
					</div>
					<div class="panel-body"><%= @publication_request["dimensions"] %></div>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-md-6 col-xs-12">
				<div class="panel panel-default">
					<div class="panel-heading">
						<h3 class="panel-title">Date the rought draft is due</h3>
					</div>
					<div class="panel-body"><%= date_from(@publication_request["rough_date"]) %></div>
				</div>
			</div>

			<div class="col-md-6 col-xs-12">
				<div class="panel panel-default">
					<div class="panel-heading">
						<h3 class="panel-title">Date the final version is due</h3>
					</div>
					<div class="panel-body"><%= date_from(@publication_request["due_date"]) %></div>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-md-4 col-xs-12">
				<div class="panel panel-default">
					<div class="panel-heading">
						<h3 class="panel-title">Admin for this request</h3>
					</div>
					<div class="panel-body">
						<%= "#{@publication_request['admin']['first_name']} #{@publication_request['admin']['last_name']}" %>
					</div>
				</div>
			</div>

			<div class="col-md-4 col-xs-12">
				<div class="panel panel-default">
					<div class="panel-heading">
						<h3 class="panel-title">Designer for this request</h3>
					</div>
					<div class="panel-body">
						<%= "#{@publication_request['designer']['first_name']} #{@publication_request['designer']['last_name']}" %>
					</div>
				</div>
			</div>

			<div class="col-md-4 col-xs-12">
				<div class="panel panel-default">
					<div class="panel-heading">
						<h3 class="panel-title">Reviewer for this request</h3>
					</div>
					<div class="panel-body">
						<%= "#{@publication_request['reviewer']['first_name']} #{@publication_request['reviewer']['last_name']}" %>
					</div>
				</div>
			</div>
		</div>

	</div>
</div>

<hr>

<div class="row comments">
	<!-- Show comments here -->
</div>

