<div class="row" id="requests-wall">
	<div class="col-md-12">
		<h1>Requests</h1>
		<% requests.each do |request| %>	
			<div class="request-thumb img-thumbnail request-cell">
				<%= link_to(publication_request_path(request["id"])) do %>
					<h3><%= request["event"] %></h3>
					<p><%= request["status"] %></p>
				<% end %>
			</div>
		<% end %>
	</div>
</div>
