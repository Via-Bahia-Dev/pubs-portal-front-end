<div class="page-header">
	<h1>New Publication Request</h1>
</div>

<div class="row">
	<div class="col-md-4 col-xs-4" id="chosen-template">
		<strong>Template for this Request</strong></br>
		<% if @template %>
			<%= image_tag(@template["image_large"], class: "img-thumbnail") %>
		<% else %>
			<div class="img-thumbnail">No template for this request</div>
		<% end %>
	</div>
	<div class="col-md-8 col-xs-8">
		<%= form_for(@publication_request) do |f| %>
			<%= errors_from_json @errors %>
			<div class="row">
				<% if @template %>
					<%= f.hidden_field :template_id, :value => @template["id"] %>
				<% end %>

				<div class="field form-group col-md-7 col-xs-12 <%=field_class(@publication_request, :event) %>">
				    <%= f.label :event, "Name of the event", class: "control-label" %>
				    <%= f.text_field :event, autofocus: true, class: "form-control input-lg", placeholder: "Event" %>
				</div>
				<div class="field form-group col-md-5 col-xs-12 form-inline <%=field_class(@publication_request, :event_date) %>">
					<%= f.label :event_date, "Date of the event this is for" %> </br>
					<div class="input-group date">
						<%= f.text_field :event_date, class: "form-control input-lg" %>
						<div class="input-group-addon">
							<span class="glyphicon glyphicon-calendar"></span>
						</div>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="field form-group col-md-7 col-xs-12 <%=field_class(@publication_request, :description) %>">
				    <%= f.label :description, "Description", class: "sr-only control-label" %>
				    <%= f.text_area :description, class: "form-control input-lg", placeholder: "Description of what you are requesting", rows: "5" %>
				</div>
				<div class="field form-group col-md-5 col-xs-12 form-inline <%=field_class(@publication_request, :rough_date) %>">
					<%= f.label :rough_date, "Date the rough draft is due" %> </br>
					<div class="input-group date">
						<%= f.text_field :rough_date, class: "form-control input-lg" %>
						<div class="input-group-addon">
							<span class="glyphicon glyphicon-calendar"></span>
						</div>
					</div>
				</div>
				<div class="field form-group col-md-5 col-xs-12 form-inline <%=field_class(@publication_request, :due_date) %>">
					<%= f.label :due_date, "Date the final version is due" %> </br>
					<div class="input-group date">
						<%= f.text_field :due_date, class: "form-control input-lg" %>
						<div class="input-group-addon">
							<span class="glyphicon glyphicon-calendar"></span>
						</div>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="field form-group col-md-7 col-xs-12 <%=field_class(@publication_request, :dimensions) %>">
				    <%= f.label :dimensions, "Dimensions", class: "sr-only control-label" %>
				    <%= f.text_field :dimensions, class: "form-control input-lg", placeholder: "Dimensions e.g. (3x2)" %>
				</div>
			</div>

			<div class="row">
				<div class="field form-group col-md-4 col-xs-12">
					<%= f.label :admin_id, "Admin for this request" %> </br>
					<%= f.select :admin_id, @admins_options, {}, class: "form-control" %>
				</div>

				<div class="field form-group col-md-4 col-xs-12">
					<%= f.label :designer_id, "Designer for this request" %> </br>
					<%= f.select :designer_id, @designers_options, {}, class: "form-control" %>
				</div>

				<div class="field form-group col-md-4 col-xs-12">
					<%= f.label :reviewer_id, "Reviewer for this request" %> </br>
					<%= f.select :reviewer_id, @reviewers_options, {}, class: "form-control" %>
				</div>
			</div>

			<div class="row">
				<div class="col-md-offset-3 col-xs-offset-2 col-md-6 col-xs-8">
					<%= f.submit("Submit", id: "submit-btn", class: "btn btn-primary btn-lg btn-block") %>
				</div>
			</div>
		<% end %>
	</div>
</div>
