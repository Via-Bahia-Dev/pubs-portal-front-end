<h1>Edit Profile</h1>

<%= form_tag("/users/#{@user.id}", method: "put") do %>
	<div class="field form-group">
    <%= label_tag :first_name, "First Name", class: "sr-only" %>
    <%= text_field :user, :first_name, autofocus: true, class: "form-control input-lg", placeholder: "First Name" %>
  </div>

  <div class="field form-group">
    <%= label_tag :last_name, "Last Name", class: "sr-only" %>
    <%= text_field :user, :last_name, class: "form-control input-lg", placeholder: "Last Name" %>
  </div>

  <div class="field form-group">
    <%= label_tag :email, "Email", class: "sr-only"%>
    <%= email_field :user, :email, class: "form-control input-lg", placeholder: "Email" %>
  </div>

  <div class="actions">
    <%= submit_tag "Save Changes", class: "btn btn-primary btn-lg btn-block" %>
  </div>
<% end %>