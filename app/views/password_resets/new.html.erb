<div class="page-header">
  <h1>Reset Password <small></small></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <%= form_tag password_resets_path, :method => :post, class: "form-inline" do %>
      <div class="field form-group">
        <%= label_tag :email %>
        <%= text_field_tag :email, params[:email], class: "form-control" %>
      </div>

      <div class="actions">
        <%= submit_tag "Reset Password", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
